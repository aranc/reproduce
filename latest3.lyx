\begin_layout Standard
Let 
\begin_inset Formula $I,J,K$
\end_inset

 be multi-indexes.
 
\begin_inset Formula $I=(i_{1},\ldots,i_{r})$
\end_inset

, 
\begin_inset Formula $J=(j_{1},\ldots,j_{n-r}),$
\end_inset

 
\begin_inset Formula $K=(k_{1},\ldots,k_{n-r})$
\end_inset

.
 
\begin_inset Formula $J$
\end_inset

 and 
\begin_inset Formula $K$
\end_inset

 are given indexes, and 
\begin_inset Formula $I$
\end_inset

 is a running index (using Einstein's summation below).
 
\begin_inset Formula 
\begin{eqnarray*}
\varepsilon_{IJ}\varepsilon_{IK} & = & \mbox{det}(\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{j_{1}},\dots,\delta_{j_{n-r}})\ \mbox{det}(\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{k_{1}},\dots,\delta_{k_{n-r}})\\
 & = & \mbox{det}(\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{j_{1}},\dots,\delta_{j_{n-r}})^{T}\ \mbox{det}(\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{k_{1}},\dots,\delta_{k_{n-r}})\\
 & = & \mbox{det}\left((\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{j_{1}},\dots,\delta_{j_{n-r}})^{T}(\delta_{i_{1}},\dots,\delta_{i_{r}},\delta_{k_{1}},\dots,\delta_{k_{n-r}})\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
If 
\begin_inset Formula $J$
\end_inset

 and 
\begin_inset Formula $K$
\end_inset

 don't complement 
\begin_inset Formula $I$
\end_inset

, then the above expression is 
\begin_inset Formula $0$
\end_inset

.
 otherwise, 
\begin_inset Formula $J$
\end_inset

 is a permutation of 
\begin_inset Formula $K$
\end_inset

, and the above expression is equal to:
\begin_inset Formula 
\begin{eqnarray*}
 & = & r!\,\begin{vmatrix}I_{r\times r} & 0\\
0 & \left(\delta_{j_{1}},\dots,\delta_{j_{n-r}}\right)^{T}\left(\delta_{k_{1}},\dots,\delta_{k_{n-r}}\right)
\end{vmatrix}\\
 & = & r!\mbox{\ det}\!\left(\left(\delta_{j_{1}},\dots,\delta_{j_{n-r}}\right)^{T}\left(\delta_{k_{1}},\dots,\delta_{k_{n-r}}\right)\right)\\
 & = & r!\sum_{\sigma\in S_{n-r}}\mbox{sgn}(\sigma)\delta_{k_{\sigma(1)}}^{j_{1}}\cdots\delta_{k_{\sigma(n-r)}}^{j_{n-r}}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
