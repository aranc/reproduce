\begin_layout Subsection
Expanding a determinant by column
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $A$
\end_inset

 be a matrix, and 
\begin_inset Formula $b$
\end_inset

 be a vector.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\mbox{\det}(a_{1},\ldots,a_{j-1},b,a_{j+1},\ldots a_{n}) & = & \left(-1\right)^{j-1}\mbox{\det}(b,a_{1},\ldots,a_{j-1},a_{j+1},\ldots a_{n})\\
 & = & \sum_{k=1}^{n}\left(-1\right)^{j-1}\mbox{\det}(\left(\delta^{k}b\right)\delta_{k},a_{1},\ldots,a_{j-1},a_{j+1},\ldots a_{n})\\
 & = & \sum_{k=1}^{n}\left(-1\right)^{j-1}\left(-1\right)^{k-1}\mbox{\det}(\left(\delta^{k}b\right)\delta_{1},a_{1},\ldots,a_{j-1},a_{j+1},\ldots a_{n})\\
 & = & \sum_{k=1}^{n}\left(-1\right)^{j+k}\mbox{\det}(\left(\delta^{k}b\right)\delta_{1},\ldots A_{kj}\ldots)\\
 & = & \sum_{k=1}^{n}\left(-1\right)^{j+k}\left(\delta^{k}b\right)\det(A_{kj})
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $A_{kj}$
\end_inset

 is 
\begin_inset Formula $A$
\end_inset

