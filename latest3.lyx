\begin_layout Standard
Given a manifold 
\begin_inset Formula $z=f(x,y)$
\end_inset

, we use the 
\begin_inset Quotes eld
\end_inset

parametrization
\begin_inset Quotes erd
\end_inset

 
\begin_inset Formula $x(x,y)=x$
\end_inset

, 
\begin_inset Formula $y(x,y)=y$
\end_inset

, 
\begin_inset Formula $z(x,y)=f(x,y)$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\iintop_{S}A\cdot\mathbf{dS} & = & \iintop_{S'}\begin{pmatrix}A_{1}(x,y,f(x,y))\\
A_{2}(x,y,f(x,y))\\
A_{3}(x,y,f(x,y))
\end{pmatrix}\cdot\left(\begin{pmatrix}1\\
0\\
\frac{\partial f}{\partial x}
\end{pmatrix}dx\times\begin{pmatrix}0\\
1\\
\frac{\partial f}{\partial y}
\end{pmatrix}dy\right)\\
 & = & \iintop_{S'}\begin{pmatrix}A_{1}(x,y,f(x,y))\\
A_{2}(x,y,f(x,y))\\
A_{3}(x,y,f(x,y))
\end{pmatrix}\cdot\begin{pmatrix}-\frac{\partial f}{\partial x}\\
-\frac{\partial f}{\partial y}\\
1
\end{pmatrix}dx\,dy
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $S'$
\end_inset

 is the projection of 
\begin_inset Formula $S$
\end_inset

 on the 
\begin_inset Formula $x,y$
\end_inset

.
\end_layout

