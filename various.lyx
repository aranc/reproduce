\begin_layout Subsection
Derivative of homogeneous of order r, is homogeneous of order r-1
\end_layout

\begin_layout Standard
\noindent
Let 
\begin_inset Formula $f(sx)=s^{r}f(x)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
df(sx)h=\lim_{t\to0}\frac{f(sx+th)-f(sx)}{t}=\\
\lim_{t\to0}\frac{f(s(x+\nicefrac{t}{s}h))-f(sx)}{t}=\\
s^{r}\lim_{t\to0}\frac{f(x+\nicefrac{t}{s}h)-f(x)}{t}=\\
s^{r-1}\lim_{t\to0}\frac{f(x+\nicefrac{t}{s}h)-f(x)}{\nicefrac{t}{s}}=\\
s^{r-1}\lim_{t\to0}\frac{f(x+th)-f(x)}{t}=s^{r-1}df(x)h
\end{multline*}

\end_inset


\end_layout

\begin_layout Subsection
Euler: if f is homogeneous of order r, then 
\begin_inset Formula $x\cdot\nabla f=rf(x)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
df_{x_{0}}x_{0}=\left.\frac{d}{dt}f(x_{0}+tx_{0})\right|_{t=0}=\left.\frac{d}{dt}f((1+t)x_{0})\right|_{t=0}=\\
\left.\frac{d}{dt}(1+t)^{r}f(x_{0})\right|_{t=0}=\left.r(1+t)^{r-1}f(x_{0})\right|_{t=0}=rf(x_{0})
\end{multline*}

\end_inset


\end_layout

