\begin_layout Standard
\begin_inset Formula 
\[
\begin{array}{ccc}
\mbox{Give} & \mbox{Get} & \mbox{Proof}\\
a_{n}\to\ell & \frac{a_{1}+\ldots+a_{n}}{n}\to\ell & b_{n}^{\prime}=1\\
a_{n+1}-a_{n}\to\ell & \frac{a_{n}}{n}\to\ell & a_{n}^{\prime}=a_{n+1}-a_{n}\\
a_{n}\to\ell & \sqrt[n]{a_{1}\ldots a_{n}}\to\ell & \mbox{sandwich}\\
\frac{a_{n+1}}{a_{n}}\to\ell & \sqrt[n]{a_{n}}\to\ell & \uparrow\\
 &  & a_{n}^{\prime}=\frac{a_{n}}{b_{n}}\\
\\
\end{array}
\]

\end_inset


\end_layout

