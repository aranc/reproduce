\begin_layout Section
Limit of weighted mean
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\frac{a_{n}}{b_{n}}\to\ell$
\end_inset

 and 
\begin_inset Formula $b_{1}+\ldots+b_{n}\to\infty$
\end_inset

, 
\begin_inset Formula $b_{i}>0$
\end_inset

.
 Then 
\begin_inset Formula $\frac{a_{1}b_{1}+\ldots+a_{n}b_{n}}{b_{1}+\ldots+b_{n}}\to\ell$
\end_inset

.
\end_layout

\begin_layout Standard
Proof:
\end_layout

\begin_layout Standard
If 
\begin_inset Formula $\ell=0$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|\frac{a_{1}b_{1}+\ldots+a_{n}b_{n}}{b_{1}+\ldots+b_{n}}\right|\le\frac{\left|a_{1}b_{1}+\ldots+a_{N}b_{N}\right|}{b_{1}+\ldots+b_{n}}+\frac{\left|a_{N+1}\right|b_{N+1}}{b_{1}+\ldots+b_{n}}+\ldots+\frac{\left|a_{n}\right|b_{n}}{b_{1}+\ldots+b_{n}}
\]

\end_inset


\end_layout

\begin_layout Standard
Find 
\begin_inset Formula $N$
\end_inset

 big enough such that 
\begin_inset Formula $\left|a_{N+...}\right|<\frac{\epsilon}{2}$
\end_inset

, and 
\begin_inset Formula $n$
\end_inset

 big enough such that the first element is 
\begin_inset Formula $<\frac{\epsilon}{2}$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & \le\frac{\epsilon}{2}+\frac{\frac{\epsilon}{2}b_{N+1}}{b_{1}+\ldots+b_{n}}+\ldots+\frac{\frac{\epsilon}{2}b_{n}}{b_{1}+\ldots+b_{n}}\\
 & \le\frac{\epsilon}{2}+\frac{\epsilon}{2}\frac{b_{N+1}+\ldots+b_{n}}{b_{1}+\ldots+b_{n}}\le\frac{\epsilon}{2}+\frac{\epsilon}{2}=\epsilon
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
If 
\begin_inset Formula $\ell\ne0$
\end_inset

, look at 
\begin_inset Formula $\frac{a_{n}-\ell b_{n}}{b_{n}}\to0$
\end_inset

, therefore 
\begin_inset Formula $\frac{a_{1}-\ell b_{1}+\ldots+a_{n}-\ell b_{n}}{b_{1}+\ldots+b_{n}}=\frac{a_{1}+\ldots+a_{n}-\ell\left(b_{1}+\ldots+b_{n}\right)}{b_{1}+\ldots+b_{n}}\to0$
\end_inset

 i.e.
 
\begin_inset Formula $\frac{a_{1}+\ldots+a_{n}}{b_{1}+\ldots+b_{n}}-\ell\to0$
\end_inset


\end_layout

\begin_layout Standard
An identical proof will work for 
\begin_inset Formula 
\[
\frac{a_{1}+\ldots+a_{n}}{b_{1}+\ldots+b_{n}}
\]

\end_inset


\end_layout

